# --- Core Application Settings ---
APP_ENV=development
APP_HOST=127.0.0.1
APP_PORT=8000

# --- Database Connections ---
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=company_kb
QDRANT_URL=http://localhost:6333
ARANGODB_URL=http://localhost:8529
ARANGODB_USER=root
ARANGODB_PASSWORD=your_arango_password
REDIS_URL=redis://localhost:6379/0

# --- Security ---
JWT_SECRET_KEY=your_super_secret_key_for_jwt_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- LLM Endpoint (LMStudio) ---
LMSTUDIO_API_URL=http://localhost:1234/v1/chat/completions
LMSTUDIO_API_KEY=

# --- Frontend URL ---
NEXT_PUBLIC_API_BASE=http://localhost:8000

# --- RAG & Model Configuration ---
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
RERANKER_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2
CHUNK_SIZE=750
CHUNK_OVERLAP=150
TOP_K_RETRIEVAL=10

# --- Feature Flags ---
USE_RERANKER=true
USE_GRAPH_SEARCH=true

# --- File Upload Settings ---
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,html,json

# --- Third-party API Keys (Optional) ---
NEXT_PUBLIC_AI_SDK_KEY=your_ai_sdk_key_here
FREEAPI_KEY=your_freeapi_key_here